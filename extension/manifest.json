{
  "manifest_version": 3,
  "name": "AthenaNet Clinical Bridge",
  "version": "2.0.0",
  "description": "Clinical data integration layer for Shadow EHR - Passive + Active modes",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://*.athenahealth.com/*",
    "https://*.athenanet.athenahealth.com/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.athenahealth.com/*",
        "https://*.athenanet.athenahealth.com/*"
      ],
      "js": ["injector.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["interceptor.js", "activeFetcher.js"],
      "matches": [
        "https://*.athenahealth.com/*",
        "https://*.athenanet.athenahealth.com/*"
      ]
    }
  ],
  "action": {
    "default_title": "AthenaNet Bridge - Click for status",
    "default_popup": "popup.html"
  },
  "externally_connectable": {
    "matches": ["http://localhost:*/*", "http://127.0.0.1:*/*"]
  }
}
