{
  "manifest_version": 3,
  "name": "AthenaNet Shadow Interceptor",
  "version": "1.0",
  "description": "Tier 1 Ingestion Layer for Shadow EHR. Intercepts internal API traffic.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.athenahealth.com/*",
    "*://localhost/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.athenahealth.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["*://*.athenahealth.com/*"]
    }
  ]
}